{
  "kind": "collectionType",
  "collectionName": "items",
  "info": {
    "singularName": "item",
    "pluralName": "items",
    "displayName": "Item",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "itemCategory": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::item-category.item-category",
      "inversedBy": "items"
    },
    "otherInfo": {
      "type": "richtext",
      "required": false
    },
    "alternateSearchTerms": {
      "type": "string",
      "regex": "^([A-Za-z0-9 ]?)+([,]{1}\\s{1}([A-Za-z0-9]\\s?)+)*$"
    },
    "recommendations": {
      "type": "component",
      "repeatable": true,
      "component": "layout.recommendation",
      "required": true
    },
    "articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "inversedBy": "items"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "featured": {
      "type": "boolean",
      "default": false
    }
  }
}
