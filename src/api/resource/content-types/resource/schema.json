{
  "kind": "collectionType",
  "collectionName": "resources",
  "info": {
    "singularName": "resource",
    "pluralName": "resources",
    "displayName": "Resource",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "url": {
      "type": "string",
      "regex": "https?:\\/\\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b([-a-zA-Z0-9()@:%_\\+.~#?&//=]*)"
    },
    "items": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "address": {
      "type": "string"
    },
    "locations": {
      "type": "richtext"
    },
    "resourceTags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::resource-tag.resource-tag",
      "inversedBy": "resources"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "relatedItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::item.item"
    },
    "articles": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::article.article",
      "mappedBy": "resources"
    }
  }
}
