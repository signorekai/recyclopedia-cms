{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "items": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::item.item",
      "mappedBy": "articles"
    },
    "content": {
      "type": "richtext"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::article-category.article-category",
      "inversedBy": "articles"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false
    },
    "excerpt": {
      "type": "text"
    },
    "resources": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::resource.resource",
      "inversedBy": "articles"
    },
    "authorBio": {
      "type": "richtext"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "visits": {
      "type": "integer",
      "default": 0
    },
    "order": {
      "type": "integer",
      "required": true,
      "default": 0
    },
    "publicationDate": {
      "type": "date"
    }
  }
}
